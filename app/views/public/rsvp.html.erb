<article>
	<h1 style="font-family: cursive;">O.s.a</h1>
	<p>
		Vänligen o.s.a till våra Toastmasters Björn &amp; Carina senast <%=l configatron.wedding_date - 1.month, format: '%Y-%m-%d' %>.
	</p>
	<div class="toastmasters-contact clearfix">
		<% configatron.toastmasters.each do |toastmaster| %>
			<div>
				<span style="font-family: cursive;"><%= toastmaster[:name] %></span><br>
				<%= toastmaster[:phone] %><br>
				<%= link_to toastmaster[:mail], "mailto:#{toastmaster[:mail]}?subject=Strandbröllop #{l configatron.wedding_date - 1.month, format: '%Y'}", target: '_blank' %>
			</div>
		<% end %>
	</div>
</article>